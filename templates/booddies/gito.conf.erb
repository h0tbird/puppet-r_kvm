#------------------------------------------------------------------------------
# This file is meant to be sourced by bash scripts:
#------------------------------------------------------------------------------

readonly ID='<%= @config['gito']['ID'] %>'
readonly IMAGE='<%= @config['gito']['IMAGE'] %>'
readonly FORCE_PULL_IMAGE='<%= @config['gito']['FORCE_PULL_IMAGE'] %>'
readonly HOSTNAME='<%= @config['gito']['HOSTNAME'] %>'
readonly DATA_DIR='<%= @config['gito']['DATA_DIR'] %>'
readonly SSH_PRI_KEY='<%= @config['gito']['SSH_PRI_KEY'] %>'
readonly SSH_PUB_KEY='<%= @config['gito']['SSH_PUB_KEY'] %>'
readonly TRUST_HOSTS='<%= @config['gito']['TRUST_HOSTS'] %>'
readonly HOST_BRIDGE='<%= @config['gito']['HOST_BRIDGE'] %>'
readonly IFACE='<%= @config['gito']['IFACE'] %>'
readonly LOG_FILE='<%= @config['gito']['LOG_FILE'] %>'
readonly OUI='<%= @config['gito']['OUI'] %>'

#------------------------------------------------------------------------------
# Repos: <remote url> <description> <category> <mirror> <local name>
#------------------------------------------------------------------------------

declare -rA REPOS=(
<% @config['gito']['REPOS'].each do |repo| %>
['<%= repo['URL'] %>']="\
'<%= repo['DESCRIPTION'] %>','<%= repo['CATEGORY'] %>','<%= repo['MIRROR'] %>'<% if repo['NAME'] -%>,'<%= repo['NAME'] %>'<% end -%>"
<% end -%>

)
