[template]
src = "resolv.tmpl"
dest = "/host/etc/.resolv.confd"
keys = [ "/mesos/dns" ]
reload_cmd = "echo '# File generated by confd (do not edit):' > /host/etc/resolv.etcd; grep -v '^nameserver' /host/etc/.resolv.confd >> /host/etc/resolv.etcd; grep '^nameserver' /host/etc/.resolv.confd | shuf >> /host/etc/resolv.etcd; cat /host/run/systemd/resolve/resolv.conf | awk '/^nameserver/ {print; exit}' >> /host/etc/resolv.etcd; ln -fs resolv.etcd /host/etc/resolv.conf"
