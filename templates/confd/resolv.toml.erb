[template]
src = "resolv.tmpl"
dest = "/host/etc/.resolv.confd"
keys = [ "/mesos/dns" ]
reload_cmd = "cp /host/etc/.resolv.confd /host/etc/resolv.etcd && cat /host/run/systemd/resolve/resolv.conf | awk '/^nameserver/ {print; exit}' >> /host/etc/resolv.etcd && ln -fs resolv.etcd /host/etc/resolv.conf"
