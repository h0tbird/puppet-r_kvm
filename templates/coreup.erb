#!/bin/bash

#------------------------------------------------------------------------------
# Definitions:
#------------------------------------------------------------------------------

NAME='core01'
DOMAIN='demo.lan'
TMPDIR="/var/tmp/vm/${NAME}"
IMGDIR="/root/coreos/${NAME}"
CFGDIR="${IMGDIR}/conf"

#------------------------------------------------------------------------------
# Setup:
#------------------------------------------------------------------------------

[ -d $TMPDIR ] || mkdir -p $TMPDIR
[ -d $IMGDIR ] || mkdir -p $IMGDIR
[ -d $CFGDIR ] || mkdir -p $CFGDIR

[ -f ${IMGDIR}/${NAME}.img ] || \
wget http://stable.release.core-os.net/amd64-usr/current/coreos_production_qemu_image.img.bz2 \
-O - | bzcat > ${IMGDIR}/${NAME}.img

#------------------------------------------------------------------------------
# Host TAP interfaces:
#------------------------------------------------------------------------------

for i in 0 1 2; do
  ip l s ${NAME}_eth${i} &> /dev/null || ip tuntap a d ${NAME}_eth${i} m tap
  brctl show br${i} | grep -q ${NAME}_eth${i} || brctl addif br${i} ${NAME}_eth${i}
  ip l sh ${NAME}_eth${i} | grep -q UP || ip l s dev ${NAME}_eth${i} up
done

#------------------------------------------------------------------------------
# Virtual machine:
#------------------------------------------------------------------------------

qemu-system-x86_64 \
-enable-kvm \
-name ${NAME}.${DOMAIN} \
-smp 2,sockets=2,cores=1,threads=1 \
-m 1024 \
-rtc base=utc \
-machine accel=kvm \
-boot order=c,reboot-timeout=60,strict=on \
-cpu host \
-nodefconfig \
-device sga \
-display none \
-daemonize \
\
-netdev tap,ifname=${NAME}_eth0,id=hostnet0,vhost=on,script=no,downscript=no \
-device virtio-net-pci,netdev=hostnet0,id=net0,romfile=,bus=pci.0,addr=0x3 \
\
-netdev tap,ifname=${NAME}_eth1,id=hostnet1,vhost=on,script=no,downscript=no \
-device virtio-net-pci,netdev=hostnet1,id=net1,romfile=,bus=pci.0,addr=0x4 \
\
-netdev tap,ifname=${NAME}_eth2,id=hostnet2,vhost=on,script=no,downscript=no \
-device virtio-net-pci,netdev=hostnet2,id=net2,romfile=,bus=pci.0,addr=0x5 \
\
-drive if=none,file=${IMGDIR}/${NAME},id=drive-virtio-disk0 \
-device virtio-blk-pci,scsi=off,drive=drive-virtio-disk0,id=virtio-disk0 \
\
-fsdev local,id=conf,security_model=none,readonly,path=${CFGDIR} \
-device virtio-9p-pci,fsdev=conf,mount_tag=config-2 \
\
-chardev socket,id=monitor,path=${TMPDIR}/monitor.sock,server,nowait \
-mon chardev=monitor,id=monitor,mode=control \
\
-chardev socket,id=console,path=${TMPDIR}/console.sock,server,nowait \
-device isa-serial,chardev=console,id=serial0

#------------------------------------------------------------------------------
# Console:
#------------------------------------------------------------------------------

socat -,raw,echo=0 unix-connect:${TMPDIR}/console.sock; reset

